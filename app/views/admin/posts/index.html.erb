
  <h2 class="page-header">Manage
    Post <%= link_to 'Add New', new_admin_post_path, class: 'btn btn-success pull-right' %> </h2>

  <% if @posts.exists? %>
      <table class="table table-bordered">
        <tr>
          <th>Post Title</th>
          <th>Category</th>
          <th>Date Created</th>
          <th>Action</th>
        </tr>

        <% @posts.each do |post| %>
            <tr>
              <td scope="row"><%= post.title %></td>
              <td><%= post.category_name %></td>
              <td scope="row"><%= post.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
              <td><%= link_to 'Edit', edit_admin_post_path(post), class: 'btn btn-primary' %>
                <%= link_to 'Delete', admin_post_path(post), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
              </td>
            </tr>
        <% end %>

      </table>

      <div class="digg_pagination">
        <!--<div class="page_info">-->
          <!--<%= page_entries_info @posts %>-->
        <!--</div>-->
        <%= will_paginate @posts, :container => false %>
      </div>


  <% else %>
      <p>There are no post</p>
  <% end %>

























