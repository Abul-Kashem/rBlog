<h2 class="page-header">Manage Categories <%= link_to 'Add New', new_admin_category_path, class: 'btn btn-success pull-right' %> </h2>
<% if @categories.exists? %>
<table class="table table-bordered">
  <tr>
    <th>Name</th>
    <th>Created Date</th>
    <th>Action</th>
  </tr>

  <% @categories.each do |category| %>

  <tr>
    <td scope="row"><%= category.name %></td>
    <td scope="row"><%= category.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
    <td>
      <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-primary' %>
      <%= link_to 'Delete', admin_category_path(category), class: 'btn btn-danger', method: :delete,
                  data: {confirm: 'Are you sure?'} %>
    </td>
  </tr>

 <% end %>

</table>
    <div class="digg_pagination">
      <%= will_paginate @categories, :container => false %>
    </div>
<% else %>
    <p>There are no post</p>
<% end %>















