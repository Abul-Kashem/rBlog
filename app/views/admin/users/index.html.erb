<h2 class="page-header">Manage
  User <%= link_to 'Add New', new_admin_user_path, class: 'btn btn-success pull-right' %> </h2>

<% if @users.exists? %>
    <table class="table table-bordered">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Date Created</th>
        <th>Action</th>
      </tr>

      <% @users.each do |user| %>
          <tr>
            <td scope="row"><%= user.name %></td>
            <td><%= user.email %></td>
            <td scope="row"><%= user.created_at.to_time.strftime('%B %e at %l:%M %p') %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-primary' %>
              <%= link_to 'Delete', admin_user_path(user), class: 'btn btn-danger', method: :delete, data: {confirm: 'Are you sure?'} %>
            </td>
          </tr>
      <% end %>

    </table>

    <div class="digg_pagination">
      <%= will_paginate @users, :container => false %>
    </div>
<% else %>
    <p>There are no post</p>
<% end %>
